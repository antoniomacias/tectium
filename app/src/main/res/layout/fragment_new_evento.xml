<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ammacias.tectium.Fragments.NewEventoFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFF99">


        <ImageView
            android:id="@+id/fotoEvento"
            android:layout_width="341dp"
            android:layout_height="88dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <TextView
            android:id="@+id/nombreEvento"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Evento:"
            android:textSize="20dp"
            android:textColor="#333333"
            app:layout_constraintLeft_toLeftOf="@+id/fotoEvento"
            app:layout_constraintTop_toBottomOf="@+id/fotoEvento" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/nombreEvento"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nombreEvento" />

        <TextView
            android:id="@+id/descripcionEvento"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:text="DescripciÃ³n:"
            android:textSize="20dp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nombre"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/nombreEvento" />

        <EditText
            android:id="@+id/descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textMultiLine"
            app:layout_constraintLeft_toLeftOf="@+id/descripcionEvento"
            app:layout_constraintTop_toBottomOf="@+id/descripcionEvento" />

        <TextView
            android:id="@+id/precioEvento"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Precio:"
            android:textSize="20dp"
            android:textColor="#333333"
            app:layout_constraintLeft_toLeftOf="@+id/descripcionEvento"
            app:layout_constraintTop_toBottomOf="@+id/descripcion" />

        <EditText
            android:id="@+id/precio"
            android:layout_width="154dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="numberSigned"
            app:layout_constraintLeft_toRightOf="@+id/precioEvento"
            app:layout_constraintTop_toBottomOf="@+id/descripcion" />


        <TextView
            android:id="@+id/dateo"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:text="Fecha:"
            android:textSize="20dp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/precioEvento"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/precioEvento"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/precioEvento" />
        <EditText
            android:id="@+id/dateEvento"
            android:layout_width="157dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="date"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dateo"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/dateo" />

        <EditText
            android:id="@+id/timeEvento"
            android:layout_width="129dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintLeft_toRightOf="@+id/dateEvento"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dateEvento"
            android:layout_marginTop="0dp" />
        <Button
            android:id="@+id/addEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#4267B2"
            android:textColor="#fff"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
