<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ammacias.tectium.NewEventoActivity">


    <ImageView
        android:id="@+id/fotoEvento"
        android:layout_width="350dp"
        android:layout_height="143dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/nombreEvento"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Evento:"
        app:layout_constraintLeft_toLeftOf="@+id/fotoEvento"
        app:layout_constraintTop_toBottomOf="@+id/fotoEvento" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/nombreEvento"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nombreEvento" />

    <TextView
        android:id="@+id/descripcionEvento"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:text="DescripciÃ³n:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/nombreEvento" />

    <EditText
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="@+id/descripcionEvento"
        app:layout_constraintTop_toBottomOf="@+id/descripcionEvento" />

    <TextView
        android:id="@+id/precioEvento"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Precio:"
        app:layout_constraintLeft_toLeftOf="@+id/descripcionEvento"
        app:layout_constraintTop_toBottomOf="@+id/descripcion" />

    <EditText
        android:id="@+id/precio"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintLeft_toRightOf="@+id/precioEvento"
        app:layout_constraintTop_toBottomOf="@+id/descripcion" />

    <EditText
        android:id="@+id/dateEvento"
        android:layout_width="157dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precioEvento"
        app:layout_constraintRight_toLeftOf="@+id/timeEvento"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/timeEvento"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="time"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/precio"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/addEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="addEvento"/>

</android.support.constraint.ConstraintLayout>
